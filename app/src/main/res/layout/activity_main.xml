<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 新增按鈕用於導航到 BMI 計算器 -->
    <Button
        android:id="@+id/btnBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI 計算器"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 新增 TextView 用於顯示目標 BMI -->
    <TextView
        android:id="@+id/targetBMITextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="建議目標 BMI: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBMI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 新增按鈕用於新增飲食記錄 -->
    <Button
        android:id="@+id/btnAddFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增飲食記錄"
        app:layout_constraintTop_toBottomOf="@id/targetBMITextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 新增按鈕用於查看歷史記錄 -->
    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看歷史記錄"
        app:layout_constraintTop_toBottomOf="@id/btnAddFood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 新增按鈕用於導航到 PhotoKcalActivity -->
    <Button
        android:id="@+id/btnPhotoKcal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="照片卡路里"
        app:layout_constraintTop_toBottomOf="@id/btnViewHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>