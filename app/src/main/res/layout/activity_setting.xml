<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/settingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/imgProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/settingTitle"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/default_profile_picture" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Account Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imgProfilePicture"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btnLinkGoogleAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link Google Account" />

        <TextView
            android:id="@+id/txtAccountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Account Info will appear here"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtGenderInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="目前性別: 未設定"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="男" />

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="女" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <!-- Birthday Section -->
            <TextView
                android:id="@+id/txtBirthdayInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="生日: 未設定"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSelectBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="選擇生日" />
        </LinearLayout>

        <!-- Display Name Section -->
        <EditText
            android:id="@+id/txtDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="顯示名稱"
            android:padding="8dp"
            android:background="@drawable/edit_text_background"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnEditDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新顯示名稱"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Additional settings can be added here -->
</RelativeLayout>
